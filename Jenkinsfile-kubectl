pipeline {
    agent  any
    stages {
        stage('Setup parameters') {
            steps {
                script {
                    properties([
                        parameters([
                            choice(choices: ['Default: Do Nothing','Excute kubectl'],name: 'ACTION_REQUESTING'),
                            string(defaultValue: 'aws-pnayak',name: 'AWS_CREDS',trim: true),
                            string(defaultValue: 'us-east-1',name: 'FIRST_REGION_NAME',trim: true),
                            string(defaultValue: 'get pods -A',name: 'KUBECTL_COMMAND_ARGUMENTS',trim: true),
                        ])
                    ])
                }
            }
        }
      stage('Execute Kubectl Command') {
            when { expression { params.ACTION_REQUESTING == 'Excute kubectl'  }  }
            steps {
              withAWS(credentials: params.AWS_CREDS, region: params.FIRST_REGION_NAME) {
                  echo "Executing kubectl on EKS Cluster"
                  sh "kubectl "+params.KUBECTL_COMMAND_ARGUMENTS
              }
            }
      }
    }
}
        
